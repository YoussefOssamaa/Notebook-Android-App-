<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">




    <LinearLayout
        android:id="@+id/login_greeting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/login_icon"
            android:layout_marginRight="40dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:text="@string/Hello_xml"
                android:textColor="@color/grey"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:text="@string/welcomeback_xml"
                android:textColor="@color/grey"
                android:textSize="30dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/login_greeting_layout">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_and_pass_layout"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/email_etxml_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_shape"
                android:hint="@string/email_etxml"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pass_etxml_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_shape"
                android:hint="@string/pass_etxml"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/LoginBtnxml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shape"
                android:paddingHorizontal="10dp"
                android:text="@string/Loginbtn"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/createAcc_et_xml"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Donthaveaccount_xml"
                android:textColor="@color/dark_grey"
                android:textSize="20dp"
                android:textAlignment="center"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarxml_loginAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>



    </LinearLayout>



</RelativeLayout>
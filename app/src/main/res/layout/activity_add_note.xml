<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_light_primary"
    tools:context=".AddNoteActivity">

<LinearLayout
    android:id="@+id/txtview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/Add_note_et_xml"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add New Note "
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"/>

    <ImageButton
        android:id="@+id/done_btn_xml"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_check_24"
        app:tint = "@color/white"
        android:layout_marginVertical="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>

    <LinearLayout
        android:layout_below="@+id/txtview1"
        android:id="@+id/title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_et_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title "
            android:textColor="@color/my_light_primary"
            android:textSize="40dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout_xml"
        android:layout_below="@+id/title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/content_et_xml"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:hint="Content "
            android:textColor="@color/my_light_primary"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

</RelativeLayout>
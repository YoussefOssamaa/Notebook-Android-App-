<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_light_primary"
    tools:context=".AddNoteActivity">

<LinearLayout
    android:id="@+id/txtview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/Add_note_et_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Note "
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"/>



</LinearLayout>

    <ImageButton
        android:id="@+id/done_btn_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="30dp"
        android:layout_marginRight="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_check_24"
        app:tint="@color/white" />
    <LinearLayout
        android:layout_below="@+id/txtview1"
        android:id="@+id/title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_et_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title "
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout_xml"
        android:layout_below="@+id/title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/content_et_xml"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:hint="Content "
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"/>

    </LinearLayout>
<TextView
    android:id="@+id/delete_textview_xml"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Delete Note"
    android:textColor="@color/white"
    android:textSize="30dp"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:textAlignment="center"
    android:layout_centerInParent="true"
    android:textStyle="bold"
    android:layout_marginVertical="50dp"
    android:visibility="gone"
    android:background="@drawable/rounded_shape_white"/>
</RelativeLayout>